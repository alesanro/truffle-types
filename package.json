{
  "name": "truffle-types",
  "version": "1.0.0",
  "engines": {
    "node": ">=10",
    "yarn": ">=1.13"
  },
  "main": "package.json",
  "repository": "git@gitlab.chronobank.io:SmartContracts/truffle-types.git",
  "author": "Alex Rudyak <aliaksandr.rudziak@instinctools.com>",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@laborx/tsconfig-chronobank-lib": "~0.1.3",
    "@laborx/tslint-chronobank-base": "~0.1.2",
    "@types/bn.js": "^4.11.4",
    "@types/chai": "~4.1.4",
    "@types/chai-fs": "~2.0.1",
    "@types/humps": "~1.1.2",
    "@types/lodash": "~4.14.116",
    "@types/mocha": "~5.2.5",
    "@types/node": "^10.12.21",
    "chai": "~4.1.2",
    "chai-fs": "~2.0.0",
    "ganache-cli": "~6.1.8",
    "humps": "~2.0.1",
    "husky": "~1.3.1",
    "lerna": "~3.10.7",
    "lint-staged": "~8.1.3",
    "lodash": "~4.17.10",
    "mocha": "~5.2.0",
    "npm-run-all": "~4.1.2",
    "pkg-dir": "~4.1.0",
    "prettier": "~1.16.4",
    "pretty-quick": "~1.10.0",
    "truffle": "~4.1.14",
    "ts-node": "~8.0.2",
    "tslint": "~5.12.0",
    "tslint-plugin-prettier": "~2.0.1",
    "typescript": "~3.3.1",
    "wsrun": "~3.5.0"
  },
  "scripts": {
    "lerna": "npx lerna",
    "wsrun": "wsrun",
    "tslint": "tslint",
    "tsc": "tsc",
    "pretty-quick": "pretty-quick",
    "bootstrap": "yarn run lerna bootstrap",
    "postbootstrap": "cp -f node_modules/@types/mocha/index.d.ts overrides/mocha/",
    "build:tsc": "yarn run tsc -b tsconfig.base.json",
    "build": "yarn run build:tsc",
    "test": "yarn run wsrun --exclude-missing --parallel test",
    "clean": "yarn run build:tsc --clean && yarn run wsrun --exclude-missing --serial clean",
    "prerelease": "yarn run build",
    "release": "make publish",
    "release-clean": "make cleanup",
    "pack:dry": "yarn run wsrun --serial --exclude-missing pack:dry"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn run pretty-quick --staged",
      "yarn run tslint --fix",
      "git add"
    ]
  }
}
